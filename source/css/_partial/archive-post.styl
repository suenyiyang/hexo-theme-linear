#main > ul.archive
  li.archive-item
    position: relative
    padding: 30px 0 30px
    border-bottom: solid 1px #e6e6e6
    display: flex
    align-items: center
    h3
      position: absolute
      left: 0
      top: 50%
      transform: translateY(-50%)
      color: #999
      font-size: 13px
    div.info
      flex-grow: 1
      margin-left: 120px
      display: flex
      flex-direction: column
      justify-content: center
      a
        color: #444
      a:hover
        color: theme-color
      h2
        font-size: 20px
    img.index-cover
      flex-shrink: 0
      width: 30%
      object-fit: cover
      margin-left: 0.5em
      border-radius: 3px
  li.archive-item:first-child
    margin-top: -30px
    
#main h2, #main h3
  letter-spacing: 1px
  margin: 0
  text-transform: uppercase
